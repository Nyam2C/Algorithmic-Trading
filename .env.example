# ===========================================
# High-Win Survival System - Environment Variables
# ===========================================

# Bot Configuration
BOT_NAME=trading-bot

# Database (PostgreSQL)
DATABASE_URL=postgresql://trading:yourpassword@postgres:5432/trading
DB_PASSWORD=yourpassword

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ===========================================
# Sprint 1: Trading Configuration
# ===========================================

# Binance API (Testnet)
BINANCE_TESTNET=true
BINANCE_API_KEY=your_binance_testnet_api_key
BINANCE_SECRET_KEY=your_binance_testnet_secret_key

# Trading Parameters
SYMBOL=BTCUSDT
LEVERAGE=15
POSITION_SIZE_PCT=0.05
TAKE_PROFIT_PCT=0.004
STOP_LOSS_PCT=0.004
TIME_CUT_MINUTES=120

# Gemini API
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.1

# Trading Loop
LOOP_INTERVAL_SECONDS=300

